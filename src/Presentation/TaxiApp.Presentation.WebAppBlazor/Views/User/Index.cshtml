@model IEnumerable<TaxiApp.Core.Application.DTO.UserDto>
@{
    ViewData["Title"] = "Users List";
}

<h1 class="text-3xl font-bold mb-6">Users</h1>

<a asp-action="Create" class="inline-block mb-4 bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded">
    + Add New User
</a>

<table class="min-w-full table-auto border-collapse border border-gray-300">
    <thead>
    <tr class="bg-gray-100">
        <th class="border border-gray-300 px-4 py-2 text-left">ID</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Document ID</th>
        <th class="border border-gray-300 px-4 py-2 text-left">First Name</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Last Name</th>
        <th class="border border-gray-300 px-4 py-2 text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        foreach (var user in Model)
        {
            <tr class="hover:bg-gray-50">
                <td class="border border-gray-300 px-4 py-2">@user.Id</td>
                <td class="border border-gray-300 px-4 py-2">@user.DocumentId</td>
                <td class="border border-gray-300 px-4 py-2">@user.FirstName</td>
                <td class="border border-gray-300 px-4 py-2">@user.LastName</td>
                <td class="border border-gray-300 px-4 py-2 text-center space-x-2">
                    <a asp-action="Details" asp-route-id="@user.Id" class="text-blue-600 hover:underline">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="text-yellow-600 hover:underline">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="text-red-600 hover:underline">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="border border-gray-300 px-4 py-2 text-center italic text-gray-500">No users found.</td>
        </tr>
    }
    </tbody>
</table>