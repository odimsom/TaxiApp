@model TaxiApp.Core.Application.DTO.UserDto
@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-xl font-bold mb-4 text-red-600">Are you sure you want to delete this user?</h1>

<div class="mb-2"><strong>Document ID:</strong> @Model.DocumentId</div>
<div class="mb-2"><strong>First Name:</strong> @Model.FirstName</div>
<div class="mb-2"><strong>Last Name:</strong> @Model.LastName</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Delete</button>
    <a asp-action="Index" class="ml-2 text-gray-600 hover:text-gray-800">Cancel</a>
</form>