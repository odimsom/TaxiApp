@model TaxiApp.Core.Application.DTO.UserGroupDto

@{
    ViewData["Title"] = "Delete User Group";
}

<div class="max-w-lg mx-auto p-4 bg-white rounded shadow mt-8">
    <h1 class="text-2xl font-bold mb-4">Delete User Group</h1>
    <p>Are you sure you want to delete User Group with ID: @Model.Id ?</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded mr-4">
            Delete
        </button>
        <a asp-action="Index" class="text-gray-600 hover:underline">Cancel</a>
    </form>
</div>