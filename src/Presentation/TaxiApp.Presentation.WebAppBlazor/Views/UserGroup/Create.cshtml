@model TaxiApp.Core.Application.DTO.UserGroupDto

@{
    ViewData["Title"] = "Create User Group";
}

<div class="max-w-lg mx-auto p-4 bg-white rounded shadow mt-8">
    <h1 class="text-2xl font-bold mb-4">Create User Group</h1>

    <form asp-action="Create" method="post" class="space-y-4">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
            Save
        </button>
        <a asp-action="Index" class="ml-4 text-gray-600 hover:underline">Cancel</a>
    </form>
</div>
