@model TaxiApp.Core.Application.DTO.UserGroupDetailDto

@{
    ViewData["Title"] = "User Group Detail";
}

<div class="max-w-lg mx-auto p-4 bg-white rounded shadow mt-8">
    <h1 class="text-2xl font-bold mb-4">User Group Detail</h1>

    <dl class="space-y-4">
        <div>
            <dt class="font-semibold">ID:</dt>
            <dd>@Model.Id</dd>
        </div>
        <div>
            <dt class="font-semibold">User:</dt>
            <dd>@Model.User?.FirstName @Model.User?.LastName</dd>
        </div>
        <div>
            <dt class="font-semibold">User Group ID:</dt>
            <dd>@Model.UserGroupId</dd>
        </div>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-block mt-4 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 mr-2">Edit</a>
    <a asp-action="Index" class="inline-block mt-4 text-gray-600 hover:underline">Back to List</a>
</div>