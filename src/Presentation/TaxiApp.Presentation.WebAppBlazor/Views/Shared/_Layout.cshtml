<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TaxiApp</title>

    <!-- Tailwind CSS CDN (para desarrollo rápido) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaxiApp.Presentation.WebAppBlazor.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 text-gray-800 min-h-screen flex flex-col">

<header class="bg-white shadow-md">
    <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
        <a href="@Url.Action("Index", "Home")" class="text-2xl font-semibold text-indigo-600 hover:text-indigo-700">
            TaxiApp
        </a>
        <ul class="flex space-x-6 text-lg font-medium">
            <li><a href="@Url.Action("Index", "Home")" class="hover:text-indigo-600">Home</a></li>
            <li><a href="@Url.Action("Index", "Taxi")" class="hover:text-indigo-600">Taxis</a></li>
            <li><a href="@Url.Action("Index", "Trip")" class="hover:text-indigo-600">Trips</a></li>
            <li><a href="@Url.Action("Index", "User")" class="hover:text-indigo-600">Users</a></li>
            <li><a href="@Url.Action("Index", "UserGroup")" class="hover:text-indigo-600">User Groups</a></li>
        </ul>
    </nav>
</header>

<div class="flex-grow container mx-auto px-4 py-6">
    <main role="main" class="max-w-7xl mx-auto">
        @RenderBody()
    </main>
</div>

<footer class="bg-white border-t mt-8 py-4 text-center text-gray-600 text-sm">
    &copy; 2025 - TaxiApp - All rights reserved.
</footer>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
