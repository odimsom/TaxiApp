@model TaxiApp.Core.Application.DTO.TripDto
@{
    ViewData["Title"] = "Delete Trip";
}

<h1 class="text-xl font-bold mb-4 text-red-600">Are you sure you want to delete this trip?</h1>

<div class="mb-2">
    <strong>From:</strong> @Model.From
</div>
<div class="mb-2">
    <strong>To:</strong> @Model.To
</div>
<div class="mb-2">
    <strong>Start:</strong> @Model.StartDate.ToString("g")
</div>
<div class="mb-2">
    <strong>End:</strong> @Model.EndDate.ToString("g")
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
        Delete
    </button>
    <a asp-action="Index" class="ml-2 text-gray-600 hover:text-gray-800">Cancel</a>
</form>