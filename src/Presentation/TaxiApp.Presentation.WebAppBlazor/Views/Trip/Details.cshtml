@model TaxiApp.Core.Application.DTO.TripDto
@{
    ViewData["Title"] = "Trip Details";
}

<h1 class="text-2xl font-bold mb-4">Trip Details</h1>

<div class="mb-2">
    <strong>Start:</strong> @Model.StartDate.ToString("g")
</div>
<div class="mb-2">
    <strong>End:</strong> @Model.EndDate.ToString("g")
</div>
<div class="mb-2">
    <strong>From:</strong> @Model.From
</div>
<div class="mb-2">
    <strong>To:</strong> @Model.To
</div>
<div class="mb-2">
    <strong>Rating:</strong> @Model.Rating
</div>
<div class="mb-4">
    <strong>User ID:</strong> @Model.UserId
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="bg-yellow-600 text-white px-4 py-2 rounded hover:bg-yellow-700">Edit</a>
<a asp-action="Index" class="ml-2 text-gray-600 hover:text-gray-800">Back to List</a>
<form asp-action="GenerateTripDetails" method="post" class="mb-4">
    <input type="hidden" name="tripId" value="@Model.Id" />
    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded">
        Generate Trip Details Automatically
    </button>
</form>
