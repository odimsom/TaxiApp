@model TaxiApp.Core.Application.DTO.TripDetailDto
@{
    ViewData["Title"] = "Delete Trip Detail";
}

<h1 class="text-3xl font-bold mb-6 text-red-700">Delete Trip Detail</h1>

<p>Are you sure you want to delete this trip detail?</p>

<div class="max-w-lg space-y-3 mt-4">
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Longitude:</strong> @Model.Longitude</p>
    <p><strong>Latitude:</strong> @Model.Latitude</p>
    <p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Trip ID:</strong> @Model.TripId</p>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-6">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded">Delete</button>
    <a asp-action="Index" class="ml-4 text-gray-600 hover:underline">Cancel</a>
</form>