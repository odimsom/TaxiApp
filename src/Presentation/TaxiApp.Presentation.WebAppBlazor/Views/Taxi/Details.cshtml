@model TaxiApp.Core.Application.DTO.TaxiDto

@{
    ViewData["Title"] = "Detalles del Taxi";
}

<h1 class="text-3xl font-bold text-indigo-700 mb-6">Detalles del Taxi</h1>

<div class="bg-white shadow rounded p-6 space-y-4 max-w-xl">
    <div>
        <strong class="text-gray-700">ID:</strong> @Model.Id
    </div>
    <div>
        <strong class="text-gray-700">Placa:</strong> @Model.Plate
    </div>
    <div>
        <strong class="text-gray-700">ID de Viaje:</strong> @Model.TripId
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="text-blue-600 hover:underline mr-4">Editar</a>
        <a asp-action="Index" class="text-indigo-600 hover:underline">Volver</a>
    </div>
</div>