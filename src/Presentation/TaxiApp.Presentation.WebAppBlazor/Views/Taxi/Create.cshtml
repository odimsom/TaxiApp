@model TaxiApp.Core.Application.DTO.TaxiDto

@{
    ViewData["Title"] = "Nuevo Taxi";
}

<h1 class="text-3xl font-bold text-indigo-700 mb-6">Registrar Taxi</h1>

<form asp-action="Create" method="post" class="max-w-xl bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 space-y-6">
    <div>
        <label asp-for="Plate" class="block text-gray-700 font-bold mb-2">Placa</label>
        <input asp-for="Plate" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:ring-indigo-300" />
        <span asp-validation-for="Plate" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="TripId" class="block text-gray-700 font-bold mb-2">ID de Viaje</label>
        <input asp-for="TripId" type="number" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:ring-indigo-300" />
        <span asp-validation-for="TripId" class="text-red-500 text-sm"></span>
    </div>

    <div class="flex items-center justify-between">
        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded">
            Guardar
        </button>
        <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-indigo-600 hover:text-indigo-800">
            Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}